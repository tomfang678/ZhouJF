@{
    ViewBag.Title = "道路环卫管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model YHPT.SystemInfo.Model.YhManager.SanitationInfo
<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    @ViewBag.Title
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Home")">首页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="@Url.Action("Index", "BfUser")">@ViewBag.Title</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">编辑</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER -->

<div class="portlet box purple">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-cogs"></i>
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
        </div>
        <div class="actions">
            <a class="btn green" href="@Url.Action("Index", new { gridStage = Request.QueryString["gridStage"] })"><i class="fa  fa-mail-reply"></i>返回</a>
        </div>
    </div>
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form id="formEdit" method="post" class="form-horizontal">
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        道路ID<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="hidden" id="hidID" name="ID" value="@Model.ID" />
                        @*<input type="text" id="txRoadID" name="RoadID" value="@Model.RoadID" class="form-control" placeholder="道路ID">*@
                        @Html.DropDownList("RoadID")
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        机械清扫长度<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtMachineCleanLength" name="MachineCleanLength" value="@Model.MachineCleanLength" class="form-control" placeholder="机械清扫长度">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        机械冲洗长度<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <div class="input-group">
                            <input type="text" id="txtMachineWashLength" name="MachineWashLength" value="@Model.MachineWashLength" class="form-control" placeholder="机械冲洗长度">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        人工清扫面积<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtManualCleanSquare" name="ManualCleanSquare" value="@Model.ManualCleanSquare" class="form-control" placeholder="人工清扫面积">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        人工冲洗面积<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtManualWashSquare" name="ManualWashSquare" value="@Model.ManualWashSquare" class="form-control" placeholder="人工冲洗面积">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        定额岗位<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtManualQuota" name="ManualQuota" value="@Model.ManualQuota" class="form-control" placeholder="定额岗位">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        废物箱数量<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtDustbinCount" name="DustbinCount" value="@Model.DustbinCount" class="form-control" placeholder="废物箱数量">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        带班人<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        @Html.DropDownList("LeaderCode")
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="button" class="btn red" id="sure">确定</button>
                            <a href="@Url.Action("Index", new { gridStage = Request.QueryString["gridStage"] })" class="btn default">取消</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <!-- END FORM-->
    </div>
    @*@{ Html.RenderAction("BfOrgTree", "PlugIn"); }*@
</div>

@section scripts{
    <script src="~/Assets/global/Plugins/jquery-validation/additional-methods.min.js"></script>
    <script src="~/Assets/global/Plugins/bootstrap-daterangepicker/moment.min.js"></script>
    <link href="~/Assets/global/Css/style-metronic.css" rel="stylesheet" />
    <script src="~/Assets/global/Plugins/bootstrap-treeview/bootstrap-treeview.js"></script>
    @Scripts.Render("~/Scripts/SanitationInfo/Edit.js")

    @*@Scripts.Render("~/Scripts/PulgIn/BfOrgTree.js")*@
}
