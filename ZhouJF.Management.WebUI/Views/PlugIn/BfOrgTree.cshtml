@{
    Layout = null;
}

<div class="modal fade" id="bfOrgDialog" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog" style="width:400px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">请选择部门</h4>
            </div>
            <div id="DepartmentTree" style="margin-left: 5px;margin-right: 5px"></div>
            <div class="modal-footer">
                <input type="hidden" id="hidTmpOrg"/>
                <button type="button" class="btn btn-success" data-dismiss="modal" id="choose" onclick="chooseOrg();">选择</button>
                <button type="button" class="btn default" data-dismiss="modal" id="btnClose">关闭</button>
            </div>
        </div>
    </div>
</div>
