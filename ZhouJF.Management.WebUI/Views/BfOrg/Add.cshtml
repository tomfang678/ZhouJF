@{
    ViewBag.Title = "部门管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">部门管理 
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Home")">首页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="@Url.Action("Index", "BfOrg")">部门管理</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">新建</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER -->

<div class="portlet box purple">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-cogs"></i>
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
        </div>
        <div class="actions">
            <a class="btn green" href="@Url.Action("Index", new { gridStage = Request.QueryString["gridStage"] })"><i class="fa  fa-mail-reply"></i>返回</a>
        </div>
    </div>
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form id="BfOrgAdd" method="post" class="form-horizontal">
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        部门编码<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtCODE" name="CODE" class="form-control" placeholder="请输入部门编码">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        部门名称<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtNAME" name="NAME" class="form-control" placeholder="请输入部门名称">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        上级部门
                    </label>
                    <div class="col-md-4">
                        <div class="input-group">
                            <input hidden="hidden" id="txtOwnerOrgId" name="OWNER_ID">
                            <input type="text" id="txtOwnerOrgName" placeholder="请选择上级部门" readonly="readonly" class="form-control">
                            <span class="input-group-btn">
                                <a class="btn green" id="btnOrgCls" data-toggle="modal" href="#bfOrgDialog">选择</a>
                            </span>
                        </div>
                        <span class="help-block"></span>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="button" class="btn green" id="sure">确定</button>
                        <a href="@Url.Action("Index")" class="btn default">取消</a>
                    </div>
                </div>
            </div>
        </form>
        <!-- END FORM-->
    </div>

    
    @{ Html.RenderAction("BfOrgTree", "PlugIn"); }
</div>

@section scripts{
    <script src="~/Assets/global/Plugins/jquery-validation/additional-methods.min.js"></script>
    <script src="~/Assets/global/Plugins/bootstrap-daterangepicker/moment.min.js"></script>
    <link href="~/Assets/global/Css/style-metronic.css" rel="stylesheet"/>
    <script src="~/Assets/global/Plugins/bootstrap-treeview/bootstrap-treeview.js"></script>
    @Scripts.Render("~/Scripts/BfOrg/Add.js")
    @Scripts.Render("~/Scripts/PulgIn/BfOrgTree.js")
}

