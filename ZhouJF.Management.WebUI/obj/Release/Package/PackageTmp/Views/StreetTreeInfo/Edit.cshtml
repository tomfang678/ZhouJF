@{
    ViewBag.Title = "道路下水道管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model YHPT.SystemInfo.Model.YhManager.StreetTreeInfo
<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    @ViewBag.Title
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Home")">首页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="@Url.Action("Index", "BfUser")">@ViewBag.Title</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">编辑</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER -->

<div class="portlet box purple">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-cogs"></i>
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
        </div>
        <div class="actions">
            <a class="btn green" href="@Url.Action("Index", new { gridStage = Request.QueryString["gridStage"] })"><i class="fa  fa-mail-reply"></i>返回</a>
        </div>
    </div>
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form id="formEdit" method="post" class="form-horizontal">
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        道路<span class="required" aria-required="true">
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="hidden" id="hidID" name="ID" value="@Model.ID" />
                        @Html.DropDownList("RoadID")
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        小树（株）<span class="required" aria-required="true">
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtSamllTreeCount" name="SamllTreeCount" value="@Model.SamllTreeCount" class="form-control" placeholder="小树数量">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        中树（株）<span class="required" aria-required="true">
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtMiddleTreeCount" name="MiddleTreeCount" value="@Model.MiddleTreeCount" class="form-control" placeholder="中树数量">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        大树（株）<span class="required" aria-required="true">
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtBigTreeCount" name="BigTreeCount" value="@Model.BigTreeCount" class="form-control" placeholder="大树数量">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        特大树（株）<span class="required" aria-required="true">
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtBiggerTreeCount" name="BiggerTreeCount" value="@Model.BiggerTreeCount" class="form-control" placeholder="特大树数量">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        带班<span class="required" aria-required="true">
                        </span>
                    </label>
                    <div class="col-md-4">
                        @Html.DropDownList("SubContLeaderInfoID")
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="button" class="btn red" id="sure">确定</button>
                            <a href="@Url.Action("Index", new { gridStage = Request.QueryString["gridStage"] })" class="btn default">取消</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <!-- END FORM-->
    </div>
    @*@{ Html.RenderAction("BfOrgTree", "PlugIn"); }*@
</div>

@section scripts{
    <script src="~/Assets/global/Plugins/jquery-validation/additional-methods.min.js"></script>
    <script src="~/Assets/global/Plugins/bootstrap-daterangepicker/moment.min.js"></script>
    <link href="~/Assets/global/Css/style-metronic.css" rel="stylesheet" />
    <script src="~/Assets/global/Plugins/bootstrap-treeview/bootstrap-treeview.js"></script>
    @Scripts.Render("~/Scripts/StreetTreeInfo/Edit.js")

    @*@Scripts.Render("~/Scripts/PulgIn/BfOrgTree.js")*@
}
