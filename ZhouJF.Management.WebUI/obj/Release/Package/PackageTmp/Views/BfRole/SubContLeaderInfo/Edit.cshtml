@{
    ViewBag.Title = "分包方负责人";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model YHPT.SystemInfo.Model.YhManager.SubContLeaderInfo
<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    分包方管理
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Home")">首页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="@Url.Action("Index", "BfUser")">@ViewBag.Title</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">编辑</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER -->

<div class="portlet box purple">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-cogs"></i>
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
        </div>
        <div class="actions">
            <a class="btn green" href="@Url.Action("Index", new { gridStage = Request.QueryString["gridStage"] })"><i class="fa  fa-mail-reply"></i>返回</a>
        </div>
    </div>
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form id="formEdit" method="post" class="form-horizontal">
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        分包方ID<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="hidden" id="hidID" name="ID" value="@Model.ID" />
                        <input type="text" id="txtSubContractorCode" name="SubContractorCode" value="@Model.SubContractorID" class="form-control" placeholder="分包方ID">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        带班编码<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtLeaderCode" name="LeaderCode" value="@Model.LeaderCode" class="form-control" placeholder="带班编码">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        带班姓名<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <div class="input-group">
                            <input type="text" id="txtLeaderName" name="LeaderName" value="@Model.LeaderName" class="form-control" placeholder="带班姓名">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        带班手机号<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtPhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" placeholder="带班手机号">
                    </div>
                </div>
                <div class="form-group">
                    @*<input type="hidden" id="hidID" name="LastModifiedTime" value="@Model.LastModifiedTime" />
                        <input type="hidden" id="hidID" name="LastModifiedUser" value="@Model.LastModifiedUser" />*@
                    <input type="hidden" id="hidCreateUser" name="CreateUser" value="@Model.CreateUser" />
                    <input type="hidden" id="hidCreateTime" name="CreateTime" value="@Model.CreateTime" />
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="button" class="btn red" id="sure">确定</button>
                            <a href="@Url.Action("Index", new { gridStage = Request.QueryString["gridStage"] })" class="btn default">取消</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <!-- END FORM-->
    </div>
    @*@{ Html.RenderAction("BfOrgTree", "PlugIn"); }*@
</div>

@section scripts{
    <script src="~/Assets/global/Plugins/jquery-validation/additional-methods.min.js"></script>
    <script src="~/Assets/global/Plugins/bootstrap-daterangepicker/moment.min.js"></script>
    <link href="~/Assets/global/Css/style-metronic.css" rel="stylesheet" />
    <script src="~/Assets/global/Plugins/bootstrap-treeview/bootstrap-treeview.js"></script>
    @Scripts.Render("~/Scripts/SubContLeaderInfo/Edit.js")

    @*@Scripts.Render("~/Scripts/PulgIn/BfOrgTree.js")*@
}
