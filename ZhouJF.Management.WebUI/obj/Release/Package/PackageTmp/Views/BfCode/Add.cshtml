@{
    ViewBag.Title = "系统参数";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">系统参数 
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Home")">首页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="@Url.Action("Index", "BfCode")">系统参数</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">新建</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER -->

<div class="portlet box purple">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-cogs"></i>
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
        </div>
        <div class="actions">
            <a class="btn green" href="@Url.Action("Index", new { gridStage = Request.QueryString["gridStage"] })"><i class="fa  fa-mail-reply"></i>返回</a>
        </div>
    </div>
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form id="BfCodeAdd" method="post" class="form-horizontal">
            @Html.Hidden("PdCodes")
            @Html.Hidden("PdNames")
            @Html.Hidden("SortNos")
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        参数编码<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtCODE" name="CODE" class="form-control" placeholder="请输入参数编码">
                        <span class="help-block"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        参数描述<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtDESCRIPTION" name="DESCRIPTION" class="form-control" placeholder="请输入参数描述">
                        <span class="help-block"></span>
                    </div>
                </div>
            </div>
        </form>
        <!-- END FORM-->
    </div>
    <div class="portlet-body form">
        <div class="col-md-12">
            <div class="table-toolbar">
                <div class="btn-group">
                    <button id="btnDtlAdd" class="btn green">
                        <i class="fa fa-plus"></i>新增明细
                    </button>
                </div>
            </div>
            <table class="table table-striped table-hover table-bordered" id="dtlTable">
                <thead>
                    <tr>
                        <th>明细编码
                        </th>
                        <th>明细名称
                        </th>
                        <th>排序号
                        </th>
                        <th>操作
                        </th>
                    </tr>
                </thead>
                <tbody id="dtlContent"></tbody>
            </table>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="button" class="btn green" id="sure">确定</button>
                        <a href="@Url.Action("Index")" class="btn default">取消</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Assets/global/Plugins/jquery-validation/additional-methods.min.js"></script>
    <script src="~/Assets/global/Plugins/bootstrap-daterangepicker/moment.min.js"></script>
    <link href="~/Assets/global/Css/style-metronic.css" rel="stylesheet"/>
    <script src="~/Scripts/BfCode/Edit.js"></script>
    @Scripts.Render("~/Scripts/BfCode/Add.js")
}
