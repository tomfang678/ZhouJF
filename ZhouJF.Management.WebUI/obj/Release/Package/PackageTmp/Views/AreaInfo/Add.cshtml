@{
    ViewBag.Title = "区域信息管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    @ViewBag.Title
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Home")">首页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="@Url.Action("Index", "AreaInfo")">@ViewBag.Title</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">新建</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER -->

<div class="portlet box purple">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-cogs"></i>
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
        </div>
        <div class="actions">
            <a class="btn green" href="@Url.Action("Index", new { gridStage = Request.QueryString["gridStage"] })"><i class="fa  fa-mail-reply"></i>返回</a>
        </div>
    </div>
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form id="DataAdd" method="post" class="form-horizontal">
            <div class="form-body">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-md-3 control-label">
                            业主<span class="required" aria-required="true">
                                *
                            </span>
                        </label>
                        <div class="col-md-9">
                            <input type="text" id="txtOwner" name="Owner" value="" class="form-control" placeholder="业主">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">
                            标段<span class="required" aria-required="true">
                                *
                            </span>
                        </label>
                        <div class="col-md-9">
                            <input type="text" id="txtSection" name="Section" value="" class="form-control" placeholder="标段">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">
                            项目部<span class="required" aria-required="true">
                                *
                            </span>
                        </label>
                        <div class="col-md-9">
                            <input type="text" id="txtDept" name="Dept" value="" class="form-control" placeholder="项目部">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">
                            区域编码<span class="required" aria-required="true">
                                *
                            </span>
                        </label>
                        <div class="col-md-9">
                            <input type="text" id="txtAreaCode" name="AreaCode" value="" class="form-control" placeholder="区域编码">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">
                            区域<span class="required" aria-required="true">
                                *
                            </span>
                        </label>
                        <div class="col-md-9">
                            <input type="text" id="txtArea" name="Area" value="" class="form-control" placeholder="区域">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">
                            经度<span class="required" aria-required="true">
                                *
                            </span>
                        </label>
                        <div class="col-md-9">
                            <input type="text" id="longitude" name="longitude" value="" class="form-control" placeholder="经度">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">
                            纬度<span class="required" aria-required="true">
                                *
                            </span>
                        </label>
                        <div class="col-md-9">
                            <input type="text" id="latitude" name="latitude" value="" class="form-control" placeholder="纬度">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">
                            地图片区<span class="required" aria-required="true">
                                *
                            </span>
                        </label>
                        <div class="col-md-9">
                            @Html.DropDownList("region")
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">
                            道路总数<span class="required" aria-required="true">
                                *
                            </span>
                        </label>
                        <div class="col-md-9">
                            <input type="text" id="v1" name="v1" value="" class="form-control" placeholder="道路总数">
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div id="allmap" style="margin-left:20px; height :400px;width:95%"></div>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="button" class="btn green" id="sure">确定</button>
                        <a href="@Url.Action("Index")" class="btn default">取消</a>
                    </div>
                </div>
            </div>
        </form>
        <!-- END FORM-->
    </div>
    @*@{ Html.RenderAction("BfOrgTree", "PlugIn"); }*@
</div>

@section scripts{
    <script src="~/Assets/global/Plugins/jquery-validation/additional-methods.min.js"></script>
    <script src="~/Assets/global/Plugins/bootstrap-daterangepicker/moment.min.js"></script>
    <link href="~/Assets/global/Css/style-metronic.css" rel="stylesheet" />
    <script src="~/Assets/global/Plugins/bootstrap-treeview/bootstrap-treeview.js"></script>
    @Scripts.Render("~/Scripts/AreaInfo/Add.js")
    <script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=GMf62U3cb0xG38UmDg3LnWMWPZlpwnoP"></script>

    <script type="text/javascript">
        // 百度地图API功能
        var map = new BMap.Map("allmap");
        map.centerAndZoom(new BMap.Point(121.48, 31.23), 15);
        setTimeout(function () {
            map.setZoom(14);
        }, 2000);  //2秒后放大到14级
        map.enableScrollWheelZoom(true);
        function showInfo(e) {
            $("#latitude").val(e.point.lat);
            $("#longitude").val(e.point.lng);
            //alert(e.point.lng + ", " + e.point.lat);
        }
        map.addEventListener("click", showInfo);
    </script>
}


