@{
    ViewBag.Title = "道路下水道管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    @ViewBag.Title
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Home")">首页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="@Url.Action("Index", "RoadBasicInfo")">@ViewBag.Title</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">新建</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER -->

<div class="portlet box purple">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-cogs"></i>
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
        </div>
        <div class="actions">
            <a class="btn green" href="@Url.Action("Index", new { gridStage = Request.QueryString["gridStage"] })"><i class="fa  fa-mail-reply"></i>返回</a>
        </div>
    </div>
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form id="DataAdd" method="post" class="form-horizontal">
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        道路编码<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        @Html.DropDownList("RoadID")
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        连管长度<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtConnectingPipeLength" name="ConnectingPipeLength" value="" class="form-control" placeholder="连管长度">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        小型雨水管长度(φ600)<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtSamllRainPipeLength" name="SamllRainPipeLength" value="" class="form-control" placeholder=" 小型雨水管长度(φ600)">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        中型雨水管长度（Φ600-Φ1000)<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtMiddleRainPipeLength" name="MiddleRainPipeLength" value="" class="form-control" placeholder="中型雨水管长度（Φ600-Φ1000)">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        大型雨水管长度（Φ1050-Φ1500)<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtBigRainPipeLength" name="BigRainPipeLength" value="" class="form-control" placeholder="大型雨水管长度（Φ1050-Φ1500)">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        特大型雨水管长度（＞Φ1500)<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtBiggerRainPipeLength" name="BiggerRainPipeLength" value="" class="form-control" placeholder="特大型雨水管长度（＞Φ1500)">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        特大型雨水管长度（＞Φ1500)<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtDirtyWaterPipeLength" name="DirtyWaterPipeLength" value="" class="form-control" placeholder="污水管长度（不分管径）">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        带班人<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        @Html.DropDownList("LeaderCode")
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="button" class="btn green" id="sure">确定</button>
                        <a href="@Url.Action("Index")" class="btn default">取消</a>
                    </div>
                </div>
            </div>
        </form>
        <!-- END FORM-->
    </div>
    @*@{ Html.RenderAction("BfOrgTree", "PlugIn"); }*@
</div>

@section scripts{
    <script src="~/Assets/global/Plugins/jquery-validation/additional-methods.min.js"></script>
    <script src="~/Assets/global/Plugins/bootstrap-daterangepicker/moment.min.js"></script>
    <link href="~/Assets/global/Css/style-metronic.css" rel="stylesheet" />
    <script src="~/Assets/global/Plugins/bootstrap-treeview/bootstrap-treeview.js"></script>
    @Scripts.Render("~/Scripts/SewerInfo/Add.js")
}


