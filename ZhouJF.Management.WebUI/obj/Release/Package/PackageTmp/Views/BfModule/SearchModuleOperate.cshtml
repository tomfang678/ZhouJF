@{
    Layout = null;
}

<div class="modal fade" id="moduleOperateDialog" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog modal-wide">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">操作配置</h4>
            </div>
            <div class="modal-body">
                <form id="searchForm" action="#" class="">
                    <div>
                        <table class="table table-striped table-hover table-bordered">
                            <tr>
                                <td>通用操作配置：</td>
                                <td>
                                    
                                    <input type="checkbox" id="CHK_OPEN" name="operation" value="OPEN"/>查看
                                    <input type="checkbox" id="CHK_ADDNEW" name="operation" value="ADDNEW"/>新增
                                    <input type="checkbox" id="CHK_DELETE" name="operation" value="DELETE"/>删除
                                    <input type="checkbox" id="CHK_SAVE" name="operation" value="SAVE"/>保存
                                </td>
                            </tr>
                        </table>
                        <table class="table table-striped table-bordered">
                            <tr>
                                <td colspan="2">
                                    <div>
                                        <input type="button" ID="btnDtlAdd" class="btn blue" value="新增明细"/>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>其他业务规则：</td>
                                <td>
                                    <table class="table table-bordered" id="dtlTable">
                                        <thead>
                                            <tr>
                                                <th>编码
                                                </th>
                                                <th>名称
                                                </th>
                                                <th>操作
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody id="dtlContent">
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button id="OperateSave" type="button" onclick="SetModuleOperate();" data-dismiss="modal" class="btn btn-default red">保存</button>
                <button type="button" class="btn default" data-dismiss="modal" id="btnClose">关闭</button>
            </div>
        </div>
    </div>
</div>
