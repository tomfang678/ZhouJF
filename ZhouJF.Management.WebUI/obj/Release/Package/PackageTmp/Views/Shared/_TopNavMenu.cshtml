@using YHPT.Management.WebUI.Library
@{
    Layout = null;
}

<div class="top-menu">
    <ul class="nav navbar-nav pull-right">

        <!-- BEGIN USER LOGIN DROPDOWN -->
        <li class="dropdown dropdown-user">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true" style="padding-top:13px;">
                @{
                    var url = "/assets/admin/layout/img/avatar3_small.jpg";
                    if(!string.IsNullOrEmpty(UserSession.Current.Title_Url)){
                        url = UserSession.Current.Title_Url;
                }
                }
                <img alt="" class="hide1 img-circle" src="@url" />
                <span class="username username-hide-on-mobile">
                    @UserSession.Current.UserName
                </span>
                <i class="fa fa-angle-down"></i>
            </a>
            <ul class="dropdown-menu">
                <li style="display:none">
                    <a href="#">
                        <i class="icon-envelope-open"></i> 我的消息
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Logout","Account",null)">
                        <i class="icon-key"></i> 退出系统
                    </a>
                </li>
            </ul>
        </li>
        <!-- END USER LOGIN DROPDOWN -->
    </ul>
</div>