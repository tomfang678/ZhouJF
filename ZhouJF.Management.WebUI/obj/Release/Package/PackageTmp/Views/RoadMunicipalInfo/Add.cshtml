@using SmartFast.Web.BaseLibrary
@using YHPT.SystemInfo.Model
@model  YHPT.SystemInfo.Model.YhRoadMunicipalInfo.RoadMunicipalInfo

@{
    ViewBag.Title = "道路市政信息";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    @ViewBag.Title
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Home")">首页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="@Url.Action("Index", "RoadMunicipalInfo")"> @ViewBag.Title</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">新建</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER -->

<div class="portlet box purple">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-cogs"></i>
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
        </div>
        <div class="actions">
            <a class="btn green" href="@Url.Action("Index", new { gridStage = Request.QueryString["gridStage"] })"><i class="fa  fa-mail-reply"></i>返回</a>
        </div>
    </div>
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form id="DataAdd" method="post" class="form-horizontal">
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        图片<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-5">
                        <div class="controls">
                            <input type="text" id="txtpicture" name="picture" value="" class="form-control" placeholder="图片">
                            <span class="add-on" title="预览" id="preview"><i class="icon-picture"></i></span>
                            <div id="fileQueue"></div>
                        </div>
                    </div>
                    <label class="col-md-2 control-label">
                    </label>
                    <div class="col-md-4">
                        <div class="controls">
                            <div id="uploader"></div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        道路ID<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        @*<input type="text" id="txtRoadID" name="RoadID" value="" class="form-control" placeholder="道路ID">*@
                        @Html.DropDownList("RoadID")
                    </div>
                    <label class="col-md-2 control-label">
                        道路长度<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtRoadLength" name="RoadLength" value="" class="form-control" placeholder="道路长度">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        道路面积<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtRoadSquare" name="RoadSquare" value="" class="form-control" placeholder="道路面积">
                    </div>

                    <label class="col-md-2 control-label">
                        慢车道宽度<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtSlowLaneWidth" name="SlowLaneWidth" value="" class="form-control" placeholder="慢车道宽度">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        慢车道面积<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtSlowLaneSquare" name="SlowLaneSquare" value="" class="form-control" placeholder="慢车道面积">
                    </div>
                    <label class="col-md-2 control-label">
                        快车道宽度<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtFastLaneWidth" name="FastLaneWidth" value="" class="form-control" placeholder="快车道宽度">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        快车道面积<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtFastLaneSquare" name="FastLaneSquare" value="" class="form-control" placeholder="快车道面积">
                    </div>
                    <label class="col-md-2 control-label">
                        人行道宽度<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtPavementWidth" name="PavementWidth" value="" class="form-control" placeholder="人行道宽度">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        人行道面积<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtPavementSquare" name="PavementSquare" value="" class="form-control" placeholder="人行道面积">
                    </div>
                    <label class="col-md-2 control-label">
                        侧石长度<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtCurbSideLength" name="CurbSideLength" value="" class="form-control" placeholder="侧石长度">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        平石长度<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtCurbFlatLength" name="CurbFlatLength" value="" class="form-control" placeholder="平石长度">
                    </div>
                    <label class="col-md-2 control-label">
                        窨井数量<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtInspectionShaftCount" name="InspectionShaftCount" value="" class="form-control" placeholder="窨井数量">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        进水口数量<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtWaterInletCount" name="WaterInletCount" value="" class="form-control" placeholder="进水口数量">
                    </div>
                    <label class="col-md-2 control-label">
                        排放口数量<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtWaterOutletCount" name="WaterOutletCount" value="" class="form-control" placeholder="排放口数量">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        路牌数量<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtGuideBoardCount" name="GuideBoardCount" value="" class="form-control" placeholder="路牌数量">
                    </div>
                    <label class="col-md-2 control-label">
                        人行隔离<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtPersonDivideLine" name="PersonDivideLine" value="" class="form-control" placeholder="人行隔离">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        车行隔离<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtVehicleDivideLine" name="VehicleDivideLine" value="" class="form-control" placeholder="车行隔离">
                    </div>
                    <label class="col-md-2 control-label">
                        机非隔离<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" id="txtVehicleBicycleDivideLine" name="VehicleBicycleDivideLine" value="" class="form-control" placeholder="机非隔离">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        带班人<span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        @*<input type="text" id="txtLeaderCode" name="LeaderCode" value="" class="form-control" placeholder="带班编码">*@
                        @Html.DropDownList("LeaderCode")
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="button" class="btn green" id="sure">确定</button>
                        <a href="@Url.Action("Index")" class="btn default">取消</a>
                    </div>
                </div>
            </div>
        </form>
        <!-- END FORM-->
    </div>
    @*@{ Html.RenderAction("BfOrgTree", "PlugIn"); }*@
</div>

@section scripts{
    <script src="~/Assets/global/Plugins/jquery-validation/additional-methods.min.js"></script>
    <script src="~/Assets/global/Plugins/bootstrap-daterangepicker/moment.min.js"></script>
    <link href="~/Assets/global/Css/style-metronic.css" rel="stylesheet" />
    <script src="~/Assets/global/Plugins/bootstrap-treeview/bootstrap-treeview.js"></script>
    @Scripts.Render("~/Scripts/RoadMunicipalInfo/Add.js")

    <script type="text/javascript">
        var staticFileRoot = "@Url.StaticFile()";
    </script>
    <script type="text/javascript" src="@Url.StaticFile("/assets/scripts/flashupload.js")"></script>
    <script type="text/javascript">
        $('#uploader').FileUpload({
            'subfolder': 'RoadMunicipalInfo',
            'callback': function (msg) {
                //msg.url为图片地址
                $("#txtpicture").val(msg.url);
                $("#preview").popover({ trigger: 'hover', html: true, placement: 'right ', content: "<img src='" + msg.url + "'/>" });
            }
        });

        if ($("#txtpicture").val()) {
            $("#preview").popover({ trigger: 'hover', html: true, placement: 'right ', content: "<img src='" + $("#txtpicture").val() + "'/>" });
        }
    </script>
}


